{
  "name": "Stand-Up Organizer",
  "version": "1",
  "description": "Make stand-ups fun again!",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "page_action": {
    "default_title": "Daily Stand up JIRA helper",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*/RapidBoard.jspa*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "manifest_version": 2
}